<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"> <!-- bean definitions here -->

    <bean id="name" class="java.lang.String">
        <constructor-arg value="jhala"/>
    </bean>

    <bean id="age" class="java.lang.Integer">
        <constructor-arg value="26"/>
    </bean>

<!--    to scan spring components use below component scan syntax-->
<!--    <context:component-scan base-package="com.springframework.game"/>-->

    <bean id="game" class="com.springframework.game.PacmanGame"/>

    <bean id="gameRunner" class="com.springframework.game.GameRunner">
        <constructor-arg ref="game"/>
    </bean>

</beans>